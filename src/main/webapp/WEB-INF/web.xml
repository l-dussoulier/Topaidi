<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>fr.epsi.controller.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>fr.epsi.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>fr.epsi.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>IdeeServlet</servlet-name>
        <servlet-class>fr.epsi.controller.Idee.IdeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IdeeServlet</servlet-name>
        <url-pattern>/idee/create</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>CategorieServlet</servlet-name>
        <servlet-class>fr.epsi.controller.CategorieServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategorieServlet</servlet-name>
        <url-pattern>/categorie</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>fr.epsi.controller.User.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListUsersServlet</servlet-name>
        <servlet-class>fr.epsi.controller.User.ListUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListUsersServlet</servlet-name>
        <url-pattern>/user/listUsers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListIdeeServlet</servlet-name>
        <servlet-class>fr.epsi.controller.Idee.ListIdeeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListIdeeServlet</servlet-name>
        <url-pattern>/idee/listIdees</url-pattern>
    </servlet-mapping>


</web-app>